generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  HOSPITAL
  PATIENTS
  DOCTOR
  INSURANCE_COMPANY
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Patients {
  id                   Int               @id @default(autoincrement())
  first_name           String
  last_name            String
  dob                  DateTime
  gender               Gender
  role                 Role              @default(PATIENTS)
  email                String?
  address              String
  phone                String?           @unique
  balance              Int
  insurance_company_id Int
  insurance_company    INSURANCE_COMPANY @relation(fields: [insurance_company_id], references: [id])
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt
  healthRecords        HealthRecord[]
}

model HealthRecord {
  id            Int      @id @default(autoincrement())
  patients_id   Int
  patient       Patients @relation(fields: [patients_id], references: [id])
  date          DateTime @default(now())
  bloodPressure String
  sugarLevel    Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Hospital {
  id               Int    @id @default(autoincrement())
  hospital_name    String
  hospital_address String
}

model INSURANCE_COMPANY {
  id           Int        @id @default(autoincrement())
  company_name String
  patients     Patients[]
}
